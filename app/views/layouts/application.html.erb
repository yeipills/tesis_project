<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>MyApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="<%= root_path %>">
        <img src="<%= asset_path('logo.png') %>" alt="Logo">
      </a>
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="<%= users_path %>">Users</a>
        <a class="navbar-item" href="<%= universities_path %>">Universities</a>
      </div>
      <div class="navbar-end">
        <% if current_user %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to 'Logout', logout_path, method: :delete, class: 'button is-light' %>
            </div>
          </div>
        <% else %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to 'Log in', login_path, class: 'button is-light' %>
              <%= link_to 'Sign up', new_user_path, class: 'button is-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="section">
    <%= yield %>
  </div>
  <footer class="footer">
    <div class="content has-text-centered">
      <p>
        <strong>UBBSCA</strong> by <a href="#">YEIPI</a>. The source code is licensed under <a href="http://opensource.org/licenses/mit-license.php">MIT</a>.
      </p>
    </div>
  </footer>
</body>
</html>
