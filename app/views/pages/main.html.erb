<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Main - LearnU</title>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css' %>
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css' %>
  <%= stylesheet_link_tag 'main' %> <!-- Referencia a main.scss -->
</head>
<body>
  <!-- Sidebar -->
  <aside class="menu" id="sidebar">
    <button class="button is-small is-light" id="sidebar-toggle" aria-label="Toggle sidebar">
      <i class="fas fa-bars"></i>
    </button>
    <p class="menu-label">Menú</p>
    <ul class="menu-list">
      <li><a class="is-active" href="#"><i class="fas fa-home"></i> Inicio</a></li>
      <li><a href="#"><i class="fas fa-search"></i> Buscar</a></li>
      <li><a href="#"><i class="fas fa-book"></i> Cursos</a></li>
      <li><a href="#"><i class="fas fa-save"></i> Guardados</a></li>
      <li><a href="#"><i class="fas fa-user"></i> Perfil</a></li>
    </ul>
  </aside>

  <!-- Main Content -->
  <div class="container" id="main-content">
    <section class="section">
      <h1 class="title">Cursos Destacados</h1>
      <div class="columns is-multiline">
        <!-- Example card -->
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <p class="title is-4">Power BI</p>
              <p class="subtitle is-6">John Eames</p>
              <p><i class="fas fa-clock"></i> 1h 53m</p>
              <p><i class="fas fa-star"></i> 4.9/5</p>
            </div>
          </div>
        </div>
        <!-- More cards can be added here -->
      </div>
    </section>

    <section class="section">
      <h1 class="title">Categorías</h1>
      <div class="buttons is-centered">
        <button class="button is-light">Ventas</button>
        <button class="button is-light">Recursos Humanos</button>
        <button class="button is-light">Dibujo</button>
        <button class="button is-light">Big Data</button>
        <button class="button is-light">Diseño</button>
        <button class="button is-light">Marketing</button>
        <button class="button is-light">Astronomía</button>
      </div>
    </section>

    <section class="section">
      <h1 class="title">Mi Aprendizaje</h1>
      <div class="columns">
        <div class="column is-6">
          <div class="card">
            <div class="card-content">
              <p class="title is-4">Conviértete en Fotógrafo</p>
              <p class="subtitle is-6">Clara Manning</p>
              <progress class="progress is-primary" value="69" max="100">69%</progress>
            </div>
          </div>
        </div>
        <div class="column is-6">
          <div class="card">
            <div class="card-content">
              <p class="title is-4">Design Thinking 2.0</p>
              <p class="subtitle is-6">Chris Kinley</p>
              <progress class="progress is-primary" value="27" max="100">27%</progress>
            </div>
          </div>
        </div>
      </div>
      <button class="button is-dark is-fullwidth">Ver Todos</button>
    </section>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('main-content');
      const sidebarToggle = document.getElementById('sidebar-toggle');

      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('is-collapsed');
        mainContent.classList.toggle('is-expanded');
      });
    });
  </script>
</body>
</html>
