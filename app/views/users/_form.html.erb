<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>MyApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>
<body>
  <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="<%= root_path %>">
        MyApp
      </a>
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="<%= users_path %>">
          Users
        </a>
        <a class="navbar-item" href="<%= universities_path %>">
          Universities
        </a>
      </div>
      <div class="navbar-end">
        <% if current_user %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to 'Logout', logout_path, method: :delete, class: 'button is-light' %>
            </div>
          </div>
        <% else %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to 'Log in', login_path, class: 'button is-light' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="section">
    <%= yield %>
  </div>
</body>
</html>
